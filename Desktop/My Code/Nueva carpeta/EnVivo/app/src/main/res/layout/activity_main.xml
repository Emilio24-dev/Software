<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/sentri_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="320dp"
    android:layout_gravity="center_horizontal">

    <!-- Barra superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_home"
        app:titleCentered="true"

        app:menu="@menu/menu_main"
        android:maxWidth="320dp"
        android:layout_gravity="center_horizontal" />

    <!-- TARJETA: En vivo -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnLive"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:maxWidth="320dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@color/sentri_card_bg"
        app:strokeColor="@color/sentri_card_stroke"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="61dp"

            android:layout_gravity="center"

            android:contentDescription="@string/btn_live"
            android:src="@drawable/security_cam" />
    </com.google.android.material.card.MaterialCardView>

    <!-- TARJETA: Grabaciones -->

    <!-- TARJETA: Alertas -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnRecordings"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:maxWidth="320dp"
        app:cardBackgroundColor="@color/sentri_card_bg"
        app:cardCornerRadius="22dp"
        app:strokeColor="@color/sentri_card_stroke"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/btn_recordings"
            android:src="@drawable/folderca"
            app:strokeColor="@color/sentri_card_stroke"

            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnAlerts"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:maxWidth="320dp"
        app:cardBackgroundColor="@color/sentri_card_bg"
        app:cardCornerRadius="22dp"
        app:strokeColor="@color/sentri_card_stroke"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:contentDescription="@string/btn_alerts"

            android:src="@android:drawable/ic_dialog_alert"
            app:tint="@color/sentri_on_dark"
            />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
